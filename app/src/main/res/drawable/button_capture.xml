<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:top="@dimen/circlePadding"
        android:right="@dimen/circlePadding"
        android:bottom="@dimen/circlePadding"
        android:left="@dimen/circlePadding">
        <shape
            android:shape="oval">
            <solid android:color="#ffffff" />
            <size android:width="50dp"
                android:height="50dp" />
        </shape>
    </item>
    <item>
        <shape
            android:shape="oval">
            <stroke android:width="2dp"
                android:color="#fff"/>
        </shape>
    </item>
</layer-list>